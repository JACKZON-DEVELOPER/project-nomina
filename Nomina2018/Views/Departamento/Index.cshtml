@model IEnumerable<Nomina2018.Models.Departamento>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Departamentos</h2>
<br />

@using (Html.BeginForm())
{ 

}

<table class="table table-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string selectedRow = "";
        if (item.Id == ViewBag.DepartamentoID)
        {
            selectedRow = "success";
        }
        <tr class="@selectedRow" valing="top">
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>

            <td>
                @Html.ActionLink("Ver mas", "Details", new { id = item.Id }, new {@class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>


