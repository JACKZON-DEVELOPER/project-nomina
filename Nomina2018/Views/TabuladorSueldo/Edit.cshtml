@model Nomina2018.Models.TabuladorSueldo

@{
    ViewBag.Title = "Edit";
}

<br />
<h2>Actulizar Datos</h2>
<br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
