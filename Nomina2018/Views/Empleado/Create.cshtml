@model Nomina2018.Models.Empleado

@{
    ViewBag.Title = "Create";
}
<br />
<h2>Nuevo Empleado</h2>
<br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h4>Ingresa los Datos del Empleado</h4>

    
    <div class="form-horizontal row">



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-12"><hr />
            <h5>Informacion del Empleado</h5>
            <hr />
        </div>
        <div class="form-group col-4">
            @Html.LabelFor(model => model.NumeroEmpleado, htmlAttributes: new { @class = "control-label" })
            <div class="col-md-12">

                @Html.EditorFor(model => model.NumeroEmpleado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroEmpleado, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-4">
            @Html.LabelFor(model => model.FechaIngreso, htmlAttributes: new { @class = "control-label " })
